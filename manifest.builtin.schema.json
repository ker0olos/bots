{
  "$comment": "Only used for the builtin packs. Those properties don't work on normal manual packs.",
  "allOf": [{ "$ref": "manifest.schema.json" }],
  "properties": {
    "commands": {
      "type": "object",
      "description": "Register new slash commands",
      "additionalProperties": false,
      "patternProperties": {
        "^.*$": {
          "type": "object",
          "required": ["source", "description"],
          "properties": {
            "source": {
              "type": "string"
            },
            "description": {
              "type": "string"
            },
            "options": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["id", "description", "type"],
                "properties": {
                  "id": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  },
                  "type": {
                    "enum": ["string", "integer", "boolean"]
                  },
                  "required": {
                    "type": "boolean"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
