{
  "files.exclude": {
    ".git": true,
    "**/build": true,
    "**/target": true,
    "**/__snapshots__": true
  },
  "discord.enabled": true,
  "discord.buttonEnabled": true,
  "discord.buttonLabel": "Add Fable to Your Server",
  "discord.buttonUrl": "https://discord.com/oauth2/authorize?client_id=1041970851559522304&scope=applications.commands%20bot",
  //
  "editor.tabSize": 2,
  "editor.formatOnSave": true,
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": false,
  "explorer.fileNesting.patterns": {
    "README.md": "LICENSE,.gitignore,ToS.md,Policy.md",
    ".env.example": ".env",
    "deno.json": "deno.lock"
  },
  //
  "deno.lint": true,
  "deno.enable": true,
  "deno.config": "deno.json",
  //
  "[typescript]": {
    "editor.defaultFormatter": "denoland.vscode-deno"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "denoland.vscode-deno"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "denoland.vscode-deno"
  },
  "[markdown]": {
    "editor.defaultFormatter": "denoland.vscode-deno"
  },
  //
  "json.schemas": [
    {
      "url": "http://json-schema.org/schema",
      "fileMatch": [
        "json/*.json"
      ]
    },
    {
      "url": "./json/schema.json",
      "fileMatch": [
        "packs/*/manifest.json"
      ]
    }
  ],
  "yaml.schemas": {
    "https://json.schemastore.org/github-workflow.json": "file://.github/workflows/deploy.yml"
  }
}
