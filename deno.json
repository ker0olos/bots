{
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "include": ["camelcase", "eqeqeq", "no-const-assign", "no-eval"]
    }
  },
  "tasks": {
    "start": "deno run --watch --allow-net --allow-read --allow-env ./src/interactions.ts",
    "tunnel": "deno task start & ssh -R 80:localhost:8000 localhost.run"
  },
  "fmt": {
    "options": {
      "useTabs": false,
      "singleQuote": true,
      "indentWidth": 2
    }
  }
}
