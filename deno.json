{
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "include": [
        "prefer-ascii",
        "camelcase",
        "eqeqeq",
        "no-const-assign",
        "no-eval",
        "no-non-null-assertion",
        "no-throw-literal",
        "no-sparse-arrays",
        "explicit-function-return-type"
      ]
    }
  },
  "tasks": {
    "commands": "deno run --allow-net --allow-read --allow-env update_commands.ts",
    "start": "deno run --watch --allow-net --allow-read --allow-env src/interactions.ts",
    "proxy": "deno task start & ssh -R 80:localhost:8000 localhost.run"
  },
  "fmt": {
    "options": {
      "useTabs": false,
      "singleQuote": true,
      "indentWidth": 2
    }
  }
}
