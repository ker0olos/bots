{
  "$id": "json/alias.json",
  "type": "object",
  "additionalProperties": false,
  "anyOf": [
    { "required": ["english"] },
    { "required": ["romaji"] },
    { "required": ["native"] }
  ],
  "properties": {
    "english": {
      "type": "string",
      "minLength": 1,
      "maxLength": 128
    },
    "romaji": {
      "type": "string",
      "minLength": 1,
      "maxLength": 128
    },
    "native": {
      "type": "string",
      "minLength": 1,
      "maxLength": 128
    },
    "alternative": {
      "type": "array",
      "description": "A list of alternative known aliases",
      "items": {
        "type": "string",
        "minLength": 1,
        "maxLength": 128
      }
    }
  }
}
