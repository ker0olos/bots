{
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "features": {
    "ghcr.io/devcontainers-contrib/features/deno:1": {}
  },
  "hostRequirements": {
    "cpus": 4
  },
  "waitFor": "onCreateCommand",
  "postCreateCommand": "npm i -g fauna-shell ngrok concurrently",
  "customizations": {
    "vscode": {
      "extensions": [
        "denoland.vscode-deno"
      ]
    },
    "codespaces": {
      "openFiles": [
        "src/interactions.ts"
      ]
    }
  },
  "portsAttributes": {
    "8000": {
      "label": "discord"
    }
  },
  "forwardPorts": [8000],
  "secrets": {
    "APP_ID": {
      "description": "Your discord app's id"
    },
    "PUBLIC_KEY": {
      "description": "A discord app's public key"
    },
    "BOT_TOKEN": {
      "description": "A discord bot token"
    },
    "GUILD_ID": {
      "description": "A discord server id",
      "documentationUrl": "https://github.com/ker0olos/fable/wiki/Get-Server-ID"
    },
    "FAUNA_SECRET": {
      "description": "A fauna database auth key",
      "documentationUrl": "https://github.com/ker0olos/fable/wiki/FaunaDB"
    }
  }
}
