{
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "include": [
        "prefer-ascii",
        "camelcase",
        "eqeqeq",
        "no-const-assign",
        "no-eval",
        "no-non-null-assertion",
        "no-throw-literal",
        "no-sparse-arrays",
        "explicit-function-return-type"
      ]
    }
  },
  "tasks": {
    "update": "deno run -A https://deno.land/x/udd/main.ts *.ts **/*.ts",
    "start": "deno run --watch --allow-net --allow-read --allow-env src/interactions.ts",
    "proxy": "concurrently \"deno task start\" \"ngrok http 127.0.0.1:8000\" \"sleep 1 && deno task proxy_url\"",
    "proxy_url": "curl -Ss http://localhost:4040/api/tunnels | jq -C \".tunnels[0].public_url\""
  },
  "fmt": {
    "options": {
      "useTabs": false,
      "singleQuote": true,
      "indentWidth": 2
    },
    "files": {
      "exclude": ["packs/anilist/pool.json"]
    }
  }
}
